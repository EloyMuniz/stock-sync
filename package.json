  "license": "MIT",
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "typeorm": "^0.3.21"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.16",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "migration:generate": "npx typeorm migration:generate -d src/data-source.ts -n NomeDaMigracao",
    "migration:create": "npx typeorm migration:create -d src/migrations/NomeDaMigracao",
    "migration:run": "npx typeorm migration:run -d src/data-source.ts",
    "migration:revert": "npx typeorm migration:revert -d src/data-source.ts",
    "migration:show": "npx typeorm migration:show -d src/data-source.ts",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/index.ts",
    "build": "tsup src",
    "start": "node dist/index.js"
  }
}
